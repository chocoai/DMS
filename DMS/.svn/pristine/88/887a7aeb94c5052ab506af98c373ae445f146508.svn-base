    function initDateSearch()
    {
    	 //获取当前时间  年月
		var nowDate = new Date();
		var year = nowDate.getFullYear();
		var month = nowDate.getMonth();
		var strDate = nowDate.getDate();
	  	if (strDate >= 0 && strDate <= 9) {
	        strDate = "0" + strDate;
	    }
		var m = (month+1);
		if(m < 10)
		{
			m = "0"+m;
		}
		var date = year+"-"+m+"-"+strDate;
		$("#wxEndTime").val(date);
		$("#xcEndTime").val(date);
		//获取前7天的时间
		var date = new Date(nowDate.getTime() - 7 * 24 * 3600 * 1000);
		year = date.getFullYear();
		m = date.getMonth() + 1;
		strDate = date.getDate();
		if (strDate >= 0 && strDate <= 9) {
	        strDate = "0" + strDate;
	    }
		var m = (month+1);
		if(m < 10)
		{
			m = "0"+m;
		}
        $("#wxStartTime").val(year+"-"+m+"-"+strDate);
        $("#xcStartTime").val(year+"-"+m+"-"+strDate);
        weixiuByDate();
        xunChaByDate();
    }
    
