  	    		beforeExpand: nodeExpand,
  	    		onCheck: nodeWXCheck
  	    	  }
  		};
  		
  		//ajax 请求数据
		$.ajax({
			url:cxt+"/jf/manage/mapPoint/getTreeMenuAndChildren",
			async:true,
			type:"post",
			data:{},
